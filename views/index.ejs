<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>NodeStock - Acceso</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    /* Clases de estado din치mico compatibles con tu JS */
    .tab.active { @apply text-indigo-600 border-b-2 border-indigo-600; }
    .hidden { display: none; }
  </style>
</head>
<body class="bg-gray-100 font-sans flex justify-center items-center h-screen m-0 p-4">

  <div class="flex flex-col items-center w-full">
    <div class="mb-8 text-center">
        <h1 class="text-3xl font-bold text-gray-800">游닍 NodeStock</h1>
        <p class="text-gray-500">Gesti칩n de Inventario Profesional</p>
    </div>
    
    <% if (typeof username !== 'undefined') { %>
      <div class="bg-white p-8 rounded-xl shadow-lg border border-gray-200 w-full max-w-sm">
        <h2 class="text-2xl font-bold text-center text-gray-800 mb-2">춰Hola, <%= username %>!</h2>
        <p class="text-center text-gray-600 mb-6 text-sm">Ya tienes una sesi칩n activa en el sistema.</p>
        
        <button id="GoBack" class="w-full py-2.5 mb-3 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg font-semibold transition-all shadow-md">
          Ir al Panel de Control
        </button>
        
        <button id="close-session" class="w-full py-2.5 bg-red-50 hover:bg-red-100 text-red-600 rounded-lg font-semibold border border-red-200 transition-all">
          Cerrar sesi칩n
        </button>
      </div>
    <% } %>

    <% if (typeof username === 'undefined') { %>
      <div class="bg-white rounded-xl shadow-lg border border-gray-200 w-full max-w-sm overflow-hidden">
        
        <div class="flex border-b border-gray-100 bg-gray-50/50">
          <div id="tab-login" class="tab active flex-1 py-4 text-center cursor-pointer font-bold text-gray-400 transition-all hover:text-indigo-500">
            Login
          </div>
          <div id="tab-register" class="tab flex-1 py-4 text-center cursor-pointer font-bold text-gray-400 transition-all hover:text-indigo-500">
            Registro
          </div>
        </div>

        <div class="p-8">
            <div id="login-section">
              <form id="login-form">
                <h2 class="text-2xl font-bold text-gray-800 mb-6 text-center">Bienvenido</h2>
                
                <div class="mb-4">
                    <label for="login-username" class="block mb-1 text-sm font-semibold text-gray-600">Usuario</label>
                    <input id="login-username" name="username" required 
                        class="w-full p-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 outline-none transition-all shadow-sm">
                </div>
                
                <div class="mb-6">
                    <label for="login-password" class="block mb-1 text-sm font-semibold text-gray-600">Contrase침a</label>
                    <input type="password" id="login-password" name="password" required 
                        class="w-full p-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 outline-none transition-all shadow-sm">
                </div>
                
                <button type="submit" class="w-full py-3 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg font-bold shadow-md transition-all">
                  Ingresar al sistema
                </button>
                <span class="block mt-4 text-center min-h-[1.5em] text-sm font-medium"></span>
              </form>
            </div>

            <div id="register-section" class="hidden">
              <form id="register-form">
                <h2 class="text-2xl font-bold text-gray-800 mb-6 text-center">Crear cuenta</h2>
                
                <div class="mb-4">
                    <label for="register-username" class="block mb-1 text-sm font-semibold text-gray-600">Nuevo Usuario</label>
                    <input id="register-username" name="username" required 
                        class="w-full p-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 outline-none transition-all shadow-sm">
                </div>
                
                <div class="mb-4">
                    <label for="register-password" class="block mb-1 text-sm font-semibold text-gray-600">Contrase침a</label>
                    <input type="password" id="register-password" name="password" required 
                        class="w-full p-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 outline-none transition-all shadow-sm">
                </div>
                
                <div class="mb-6">
                    <label for="register-confirm-password" class="block mb-1 text-sm font-semibold text-gray-600">Confirmar contrase침a</label>
                    <input type="password" id="register-confirm-password" name="password" required 
                        class="w-full p-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 outline-none transition-all shadow-sm">
                </div>
                
                <button type="submit" class="w-full py-3 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg font-bold shadow-md transition-all">
                  Registrarme ahora
                </button>
                <span class="block mt-4 text-center min-h-[1.5em] text-sm font-medium"></span>
              </form>
            </div>
        </div>
      </div>
    <% } %>
  </div>

  <script>
    // --- MANTENEMOS TU L칍GICA ORIGINAL ---
    const $ = el => document.querySelector(el)

    const $tabLogin = $('#tab-login')
    const $tabRegister = $('#tab-register')
    const $loginSection = $('#login-section')
    const $registerSection = $('#register-section')

    $tabLogin?.addEventListener('click', () => {
      $tabLogin.classList.add('active'); $tabRegister.classList.remove('active');
      $loginSection.classList.remove('hidden'); $registerSection.classList.add('hidden');
    })

    $tabRegister?.addEventListener('click', () => {
      $tabRegister.classList.add('active'); $tabLogin.classList.remove('active');
      $registerSection.classList.remove('hidden'); $loginSection.classList.add('hidden');
    })

    const $loginForm = $('#login-form')
    const $loginSpan = $('#login-form span')
    const $registerForm = $('#register-form')
    const $registerSpan = $('#register-form span')
    const $logoutButton = $('#close-session')

    $loginForm?.addEventListener('submit', e => {
      e.preventDefault()
      const username = $('#login-username').value
      const password = $('#login-password').value
      fetch('/login', { 
        method: 'POST', 
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ username, password })
      })
      .then(res => {
        if (res.ok) {
          $loginSpan.innerText = 'Sesi칩n iniciada. Entrando...'
          $loginSpan.className = 'block mt-4 text-center text-green-600 font-bold';
          setTimeout(() => { window.location.href = '/dashboard' }, 1500);
        } else {
          $loginSpan.innerText = 'Error al iniciar sesi칩n'
          $loginSpan.className = 'block mt-4 text-center text-red-500 font-bold';
        }
      })
    })

    $registerForm?.addEventListener('submit', e => {
      e.preventDefault()
      const username = $('#register-username').value
      const password = $('#register-password').value
      const confirmPassword = $('#register-confirm-password').value
      if (password !== confirmPassword){ alert('Las contrase침as no coinciden'); return }

      fetch('/register', { 
        method: 'POST', 
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ username, password })
      })
      .then(res => {
        if (res.ok) {
          $registerSpan.innerText = 'Usuario registrado. Redirigiendo...'
          $registerSpan.className = 'block mt-4 text-center text-green-600 font-bold';
          setTimeout(() => { window.location.href = '/' }, 1500);
        } else {
          $registerSpan.innerText = 'Error al registrar usuario'
          $registerSpan.className = 'block mt-4 text-center text-red-500 font-bold';
        }
      })
    })

    $logoutButton?.addEventListener('click', e => {
      e.preventDefault()
      fetch('/logout', { method: 'GET', headers: { 'Content-Type': 'application/json' } })
      .then(res => { window.location.href = '/' })
    })

    $('#GoBack')?.addEventListener('click', () => {
       window.location.href = '/dashboard'
    })
  </script>
</body>
</html>